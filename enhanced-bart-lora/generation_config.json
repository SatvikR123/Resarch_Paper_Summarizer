{
  "preprocessing": {
    "remove_references": true,
    "remove_appendices": true,
    "clean_author_info": true,
    "normalize_whitespace": true
  },
  "generation_params": {
    "max_length": 256,
    "min_length": 100,
    "num_beams": 5,
    "length_penalty": 1.0,
    "no_repeat_ngram_size": 3,
    "early_stopping": true,
    "do_sample": true,
    "top_k": 50,
    "top_p": 0.9
  },
  "postprocessing": {
    "remove_duplicates": true,
    "ensure_sentence_endings": true
  }
}